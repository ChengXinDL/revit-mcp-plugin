<Window x:Class="ConnectXRevit.UI.ChatView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConnectXRevit.UI"
        xmlns:vm="clr-namespace:ConnectXRevit.ViewModels"
        xmlns:models="clr-namespace:ConnectXRevit.Models.Chat"
        mc:Ignorable="d"
        Title="Revit Agent 聊天界面" Height="600" Width="800">
    <Window.DataContext>
        <vm:ChatViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 连接状态和控制 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="连接状态: " VerticalAlignment="Center" />
            <TextBlock Text="{Binding ConnectionStatus}" VerticalAlignment="Center" Margin="5,0">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                <Setter Property="Foreground" Value="Green" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsConnected}" Value="False">
                                <Setter Property="Foreground" Value="Red" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <Button Content="连接" Command="{Binding ConnectCommand}" Margin="10,0" Width="75" />
            <Button Content="断开" Command="{Binding DisconnectCommand}" Margin="5,0" Width="75" />
        </StackPanel>

        <!-- 消息列表 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Messages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:ChatMessage}">
                        <ContentControl Content="{Binding}">
                            <ContentControl.Resources>
                                <!-- 人类消息模板 -->
                                <DataTemplate DataType="{x:Type models:HumanMessage}">
                                    <Grid Margin="0,5,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="7*" MaxWidth="560" />
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Column="1" 
                                                Background="#E1F5FE"
                                                Padding="8" 
                                                Margin="5"
                                                BorderBrush="#81D4FA"
                                                BorderThickness="1"
                                                CornerRadius="8">
                                            <TextBlock 
                                                TextWrapping="Wrap"
                                                Foreground="Black"
                                                Text="{Binding Content}"/>
                                        </Border>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding UserName, StringFormat={}{0} - {1:HH:mm:ss}, ConverterParameter={Binding Timestamp}}"
                                                   FontSize="10" 
                                                   Foreground="Gray"
                                                   HorizontalAlignment="Right"
                                                   Margin="5,0,15,0"
                                                   VerticalAlignment="Bottom"/>
                                    </Grid>
                                </DataTemplate>

                                <!-- AI消息模板 -->
                                <DataTemplate DataType="{x:Type models:AIMessage}">
                                    <Grid Margin="0,5,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="7*" MaxWidth="560" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Column="0" 
                                                Background="#F5F5F5"
                                                Padding="8" 
                                                Margin="5"
                                                BorderBrush="#E0E0E0"
                                                BorderThickness="1"
                                                CornerRadius="8">
                                            <TextBlock 
                                                TextWrapping="Wrap"
                                                Foreground="Black"
                                                Text="{Binding Content}"/>
                                        </Border>
                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding AgentName, StringFormat={}{0} - {1:HH:mm:ss}, ConverterParameter={Binding Timestamp}}"
                                                   FontSize="10" 
                                                   Foreground="Gray"
                                                   HorizontalAlignment="Left"
                                                   Margin="15,0,5,0"
                                                   VerticalAlignment="Bottom"/>
                                    </Grid>
                                </DataTemplate>

                                <!-- 工具消息模板 -->
                                <DataTemplate DataType="{x:Type models:ToolMessage}">
                                    <Grid Margin="0,5,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="7*" MaxWidth="560" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Column="0" 
                                                Background="#FFF8E1" 
                                                Padding="8" 
                                                Margin="5"
                                                BorderBrush="#FFE0B2"
                                                BorderThickness="1"
                                                CornerRadius="8">
                                            <StackPanel>
                                                <TextBlock Text="{Binding ToolName}" 
                                                           FontWeight="Bold"
                                                           Foreground="#E65100"
                                                           FontSize="12"/>
                                                <TextBlock Text="参数: " 
                                                           FontWeight="Bold"
                                                           Foreground="#E65100"
                                                           FontSize="11"
                                                           Margin="0,5,0,0"/>
                                                <TextBlock Text="{Binding Parameters}" 
                                                           Foreground="Black"
                                                           FontSize="11"
                                                           TextWrapping="Wrap"/>
                                                <TextBlock Text="结果: " 
                                                           FontWeight="Bold"
                                                           Foreground="#E65100"
                                                           FontSize="11"
                                                           Margin="0,5,0,0"/>
                                                <TextBlock Text="{Binding Content}" 
                                                           Foreground="Black"
                                                           FontSize="11"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>
                                        <TextBlock Grid.Column="0" 
                                                   Text="工具调用 - {Binding Timestamp:HH:mm:ss}" 
                                                   FontSize="10" 
                                                   Foreground="Gray"
                                                   HorizontalAlignment="Left"
                                                   Margin="15,0,5,0"
                                                   VerticalAlignment="Bottom"/>
                                    </Grid>
                                </DataTemplate>
                            </ContentControl.Resources>
                        </ContentControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- 输入框 -->
        <TextBox Grid.Row="2" 
                 Text="{Binding UserInput}" 
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 Height="80"
                 Margin="0,10,0,10"
                 VerticalScrollBarVisibility="Auto"
                 ToolTip="按Ctrl+Enter发送消息"/>

        <!-- 发送按钮 -->
        <Button Grid.Row="3" 
                Content="发送消息" 
                Command="{Binding SendCommand}"
                HorizontalAlignment="Right"
                Width="100"
                Height="30"/>
    </Grid>
</Window>